---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";

---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div class="flex justify-center relative items-center max-w-5xl mb-5">
    <h1 class="text-9xl font-bold mb-4">🖥️</h1>
    
		<div class="text-[4rem] md:text-[6rem] z-10">Project</div>
  
	</div>
	<div class="w-full flex justify-center">
		<div class="flex max-w-[85%]">
			<div class="mx-4">
				<a href="/project/fukulog">
					<Image
						src="/public/fukulog.top.png"
						width={1200}
						height={1200}
						alt="Pomoflow"
						class="work-img "
					/>
				</a>
				<h2>ふくログ!!</h2>
				<p class="work-text">
					服の購入状況を視覚化し、効果的に管理するWEBアプリです。
				</p>
			</div>
			<div class="mx-4">
				<a href="/work/ebisu">
					<img
						src="../../public/top.jpg"
						width={1000}
						height={1000}
						alt="ebisu"
						class="work-img"
					/>
				</a>
				<h2>Ebisu Poster</h2>
				<p class="work-text">
					Osaka University Yebisu Otoko Selection @ Osaka University Hill
					Official Poster
				</p>
			</div>
		</div>
	</div>
</BaseLayout>

<style>
	h2 {
		font-size: 1.5rem;
		margin-top: 10px;
	}

	@media (min-width: 768px) {
		h2 {
			font-size: 2rem;
		}
	}

	.work-text {
		font-size: 1rem;
	}

	@media (min-width: 768px) {
		.work-text {
			font-size: 1.2rem;
		}
	}

	.work-img {
		border-radius: 1rem;
		transition: transform 0.5s ease-in-out;
	}

	.work-img:hover {
		transform: scale(1.1);
	}
</style>

